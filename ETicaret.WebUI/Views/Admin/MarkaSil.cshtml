
@{
    ViewBag.Title = "MarkaSil";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model ETicaret.WebUI.Models.Marka





<br /><br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">


        <section class="panel">
            <header class="panel-heading">
                Marka Ekle
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="/Admin/MarkaSil" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Marka Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi" value="@Model.Adi" readonly="readonly">
                        </div>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama" value="@Model.Aciklama" readonly="readonly">

                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2">Resim Logo Ekle</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                             @*<span class="btn btn-white btn-file">*@
                                    @*<span class="fileupload-new"><i class="icon-paper-clip"></i>Dosya Seç</span>*@

                                    @*<input type="file" name="uploadFile" value="" multiple="multiple" />*@


                                @*</span>*@

                                @*<label>  Şuanki Logo =</label>*@
                                <img src="@Model.Resim.OrtaYol" />
                                <input type="hidden" name="ResimId" value="@Model.ResimId" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-2">
                            <button class="btn btn-danger" type="submit">Sil</button>

                        </div>
                        <div class=" col-lg-2">
                            <button class="btn btn-primary icon-backward"><a href="/Admin/Markalar">  Geri</a></button>

                        </div>
                        <strong><span style="color:red">@ViewBag.Hata</span> </strong>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
