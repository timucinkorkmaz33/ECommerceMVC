
@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model ETicaret.WebUI.Models.Urun


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <br />
            <br /><br />
            <br />
            <header class="panel-heading">
                Ürün Ekle
            </header>
            <div class="panel-body">
                <form role="form" action="/Admin/UrunGuncelle" method="post" class="form-horizontal tasi-form">
                    <div class="form-group ">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" style="color:black" name="Adi" value="@Model.Adi" class="form-control">

                        </div>
                    </div>
                    <input type="hidden" name="Id"  value="@Model.Id"/>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" style="color:black" name="Aciklama" value="@Model.Aciklama" class="form-control">

                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-lg-2 control-label">Alış Fiyatı</label>
                        <div class="col-lg-10">
                            <input type="text" name="AlisFiyat" value="@Model.AlisFiyat" style="color:black" class="spinner-input form-control">

                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-lg-2 control-label">Satış Fiyatı</label>
                        <div class="col-lg-10">
                            <input type="text" name="SatisFiyat" style="color:black" value="@Model.SatisFiyat" class="spinner-input form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kategori</label>
                        <div class="col-lg-10">
                            <select class="form-control col-lg-10" style="color:black" name="KategoriId">
                                @foreach (var k in ViewBag.Kategoriler)
                                {
                                    if (Model.KategoriId == k.Id)
                                    {
                                        <option selected="selected" value="@k.Id">@k.Adi</option>
                                    }
                                    else
                                    {
                                        <option value="@k.Id">@k.Adi</option>
                                    }
                                }


                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Marka</label>
                        <div class="col-lg-10 ">

                            <select class="form-control cke_focus" style="color:black" name="MarkaId">
                                @foreach (var m in ViewBag.Markalar)
                                {
                                    if (Model.MarkaId == m.Id)
                                    {
                                        <option selected="selected" value="@m.Id">@m.Adi</option>
                                    }
                                    else
                                    {
                                    <option value="@m.Id">@m.Adi</option>
                                    }
                                }


                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

