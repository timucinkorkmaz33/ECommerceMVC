
@{
    ViewBag.Title = "OzellikTipGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model ETicaret.WebUI.Models.OzellikTip


<br /><br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">


        <section class="panel">
            <header class="panel-heading">
                Özellik Tip Ekle
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="/Admin/OzellikTipGuncelle" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" style="color:black" name="Adi" value="@Model.Adi">
                        </div>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" style="color:black" name="Aciklama" value="@Model.Aciklama">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kategori</label>
                        <div class="col-lg-10">
                            <select class="form-control col-lg-10" style="color:black" name="KategoriId">
                                @foreach (var k in ViewBag.Kategoriler)
                                {
                                    if (Model.KategoriId == k.Id)
                                    {
                                        <option selected="selected" value="@k.Id">@k.Adi</option>
                                    }
                                    else
                                    {
                                        <option value="@k.Id">@k.Adi</option>
                                    }
                                }


                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-2">
                            <button class="btn btn-success icon-save" type="submit"><strong>  Kaydet</strong></button>

                        </div>
                        <div class=" col-lg-2">
                            <button class="btn btn-primary icon-backward"><a href="/Admin/Kategoriler">  Geri</a></button>

                        </div>
                        <strong><span style="color:red">@ViewBag.Hata</span> </strong>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

