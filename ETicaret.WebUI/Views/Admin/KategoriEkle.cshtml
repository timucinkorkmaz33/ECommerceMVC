
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model ETicaret.WebUI.Models.Kategori

<br /><br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">


        <section class="panel">
            <header class="panel-heading">
                Kategori Ekle
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="/Admin/KategoriEkle" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" style="color:black" name="Adi" value="@Model.Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" style="color:black" name="Aciklama" value="@Model.Aciklama">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Resim(Logo) Ekle</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i>Resim Seç</span>

                                    <input type="file" name="uploadFile" value="" multiple="multiple" />
                                </span>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-2">
                            <button class="btn btn-success icon-save" type="submit"><strong>  Kaydet</strong></button>

                        </div>
                        <div class=" col-lg-2">
                            <button class="btn btn-primary icon-backward"><a href="/Admin/Kategoriler">  Geri</a></button>

                        </div>
                        <strong><span style="color:red">@ViewBag.Hata</span> </strong>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

