
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ETicaret.WebUI.Models.Marka>

<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/MarkaEkle" class="btn btn-success">
                        Yeni Marka <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Resim</th>

                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="">

                        <td style="width:250px">
                            @if (item.Resim.OrtaYol == null)
                            {
                                <img src="/Resim/TumResimler/resimyok.jpg" width="150" height="50" />
                            }
                            else
                            {
                                <a class="fancybox" href="@item.Resim.OrtaYol">
                                    <img src="@item.Resim.OrtaYol" width="150" height="50" />
                                </a>
                            }
                        </td>
                        <td>@item.Adi</td>
                        <td>@item.Aciklama</td>

                        <td><a class="edit btn btn-success" href="/Admin/MarkaGuncelle/@item.Id"><i class="icon-pencil"></i></a></td>
                        <td><a class="delete btn btn-danger" href="/Admin/MarkaSil/@item.Id"><i class="icon-trash"></i></a></td>

                    </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</section>

